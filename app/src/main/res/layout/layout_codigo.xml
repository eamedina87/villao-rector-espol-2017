<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/orden_codigo_layout"
    android:visibility="gone"
    android:layout_marginTop="8dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Su orden ha sido generada con el siguiente código:"
            android:textSize="16sp"
            android:padding="8dp"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:text="110865"
            android:textColor="#000000"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Por favor acérquese a retirar su orden en la caja del comedor seleccionado, y recuerde calificar el servicio"
            android:textSize="16sp"
            android:padding="8dp"
            />

        <Button
            android:id="@+id/calificar_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calificar Orden"
            android:onClick="calificarOrden"
            android:background="@android:color/transparent"
            android:textColor="@color/colorButton"
            android:layout_gravity="center"
            />


</LinearLayout>