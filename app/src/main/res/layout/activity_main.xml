<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".comedores.main.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_freddy_nayeth_cuadrada"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:background="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/comedor_central"
        android:text="Comedor Central"
        android:background="@color/colorPrincipal"
        android:drawableLeft="@drawable/ic_action_name"
        style="@style/ComedorItem"
        android:onClick="onComedorSelected"
        />

    <TextView
        android:id="@+id/comedor_fiec"
        android:text="Comedor FIEC"
        android:background="@color/colorFiec"
        android:drawableLeft="@drawable/ic_comedor_fiec"
        style="@style/ComedorItem"
        android:onClick="onComedorSelected"
        />

    <TextView
        android:id="@+id/comedor_mecanica"
        android:text="Comedor MecÃ¡nica"
        android:drawableLeft="@drawable/ic_comedor_mecanica"
        android:background="@color/colorMecanica"
        style="@style/ComedorItem"
        android:onClick="onComedorSelected"
        />

</LinearLayout>
